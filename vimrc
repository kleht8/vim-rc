execute pathogen#infect()
call pathogen#helptags()

set tabstop=4
set softtabstop=4
set expandtab
set shiftwidth=4
set number
set showcmd
filetype indent on
set wildmenu
set lazyredraw
set incsearch
set hlsearch

set foldenable
set foldlevelstart=10
set foldnestmax=10
nnoremap <space> za
set foldmethod=indent

set nowrap

" NERDTREE
map <C-n> :NERDTreeToggle<CR>  
map <F3> :NERDTreeToggle<CR> 
